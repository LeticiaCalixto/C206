package mariokart;

public class Kart {
    
    // ATRIBUTOS EXPLICITOS
    String nome;
    
    // ATRIBUTO IMPLICITO DA COMPOSICAO
    Motor motor = new Motor();
    Piloto novopiloto;
    
    void pular(){
        System.out.println("O "+ nome+" pulou.");
    }
    
    void soltarTurbo(){
        System.out.println("O "+ nome+" ativou o turbo.");
    }
    
    void fazerDrift(){
        System.out.println("O "+ nome+" fez um drift.");
    }
    
}
